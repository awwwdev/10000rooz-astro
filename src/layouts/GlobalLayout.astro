import '../styles/global/variables/font-families.scss';
import '../styles/global/variables/colors.scss';
import '../styles/global/variables/radix-colors/white.scss';
import '../styles/global/variables/radix-colors/black.scss';
import '../styles/global/variables/radix-colors/light-theme.scss';
import '../styles/global/variables/radix-colors/dark-theme.scss';
import '../styles/global/variables/gradients.scss';
import '../styles/global/variables/category-colors.scss';
import '../styles/global/variables/components-colors.scss';
import '../styles/global/variables/sizes.scss';
import '../styles/global/variables/shadows.scss';

import '../styles/global/reset.scss';

import '../styles/global/base/typography.scss';
import '../styles/global/base/site-layout.scss';
import '../styles/global/base/base.scss';
import '../styles/global/base/elements.scss';

import '../styles/global/utility/layouts.scss';
import '../styles/global/utility/atomic-classes.scss';

import '../styles/global/overrides/wordpress.scss';
import '../styles/global/development/development.scss';

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

const { title = SITE_TITLE , description = SITE_DESCRIPTION} = Astro.props;
---


<html lang="en">
	<head>
		<BaseHead title={title} description={description} >
			<slot name='head'	 />
		</BaseHead>
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
				<slot />

		</main>
		<Footer />
	</body>
</html>