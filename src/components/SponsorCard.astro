---
const {
  name, description, Logo, link,
} = Astro.props;

---
    <a
      href={link}
      class="sponsorCardWrapper"
      style="text-dcoration: none;"
      target="_blank"
      rel="noreferrer"
    >
      <div class="sponsorCard">
        <div class="padding--xl" style="padding-bottom: 0;">
          <Logo style={{
            maxWidth: '20rem', maxHeight: '10rem', aspectRatio: '2/1', width: '100%', height: '100%',
          }}
          />
        </div>
        <p style="padding-bottom: var(--padding--xl); padding-inline: var(--padding--s);">{name}</p>
      </div>
      <p class="sponsorDescription bold">{description}</p>
    </a>

    <style lang="scss">
      
.sponsorDescription {
  grid-row: 2/4;
  grid-column: 1/-1;
  padding: var(--padding--xxxs) var(--padding--xs);
  border-radius: var(--border-radius--l);
  background-color: var(--clr-primary);
  color: white;
  text-align: center;
  width: max-content;
}


.sponsorCard {
  grid-row: 1/3;
  grid-column: 1/-1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  gap: var(--gap);
  background: var(--clr-gray-5);
  border-radius: var(--border-radius);
}


.sponsorCardWrapper {
  display: grid;
  gap: var(--gap);
  grid-template-rows: auto 1rem auto;
  justify-items: center;

}


    </style>