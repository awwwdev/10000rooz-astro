---
import { ThemeSwitch } from 'astro-color-scheme';
---

<ThemeSwitch strategy='button'>
  <button type='button' class='color-switch-button'>
    <div class="flex ">
      <span class=" i-ph-moon-fill w-1.5em h-1.5em dark-icon"></span>
      <span class=" i-ph-sun-fill w-1.5em h-1.5em light-icon"></span>
    </div>
    <span class="sr-only">
      تم
    </span>
  </button>
</ThemeSwitch>



<style lang='scss' is:global>
  .color-switch-button {
    line-height: 1;
    outline: none;
    padding: var(--padding--s);
    padding-right: 0;
    // width: 1em;
    // height: 1em;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .color-switc-button:hover {
    color: var(--clr-primary);
    color: #21aa74; // to match major report banner
  }

  .color-switch-svg {
    margin-inline-start: 0 !important;
    width: 1em;
    height: 1em;
  }

  .light .dark-only {
    display: none;
  }

  .dark .light-only {
    display: none;
  }
</style>
